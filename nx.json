{
  "extends": "nx/presets/npm.json",
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "plugins": ["@nxlv/python"],
  "targetDefaults": {
    "lint": {
      "executor": "@nxlv/python:ruff-check",
      "options": {
        "lintFilePatterns": [
          "**/*.py"
        ]
      }
    },
    "lint:fix": {
      "executor": "@nxlv/python:ruff-check",
      "options": {
        "lintFilePatterns": [
          "**/*.py"
        ],
        "fix": true
      },
      "cache": false
    }
  }
}

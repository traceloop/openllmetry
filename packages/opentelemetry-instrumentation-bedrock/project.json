{
  "name": "opentelemetry-instrumentation-bedrock",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/opentelemetry-instrumentation-bedrock/opentelemetry_instrumentation_bedrock",
  "targets": {
    "lock": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "poetry lock --no-update",
        "cwd": "packages/opentelemetry-instrumentation-bedrock"
      }
    },
    "add": {
      "executor": "@nxlv/python:add",
      "options": {}
    },
    "update": {
      "executor": "@nxlv/python:update",
      "options": {}
    },
    "remove": {
      "executor": "@nxlv/python:remove",
      "options": {}
    },
    "build": {
      "executor": "@nxlv/python:build",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "outputPath": "packages/opentelemetry-instrumentation-bedrock/dist",
        "publish": false,
        "lockedVersions": true,
        "bundleLocalDependencies": true
      }
    },
    "install": {
      "executor": "@nxlv/python:install",
      "options": {
        "silent": false,
        "args": "",
        "cacheDir": ".cache/pypoetry",
        "verbose": false,
        "debug": false
      }
    },
    "lint": {
      "executor": "@nxlv/python:flake8",
      "outputs": [
        "{workspaceRoot}/reports/packages/opentelemetry-instrumentation-bedrock/pylint.txt"
      ],
      "options": {
        "outputFile": "reports/packages/opentelemetry-instrumentation-bedrock/pylint.txt"
      }
    },
    "test": {
      "executor": "@nxlv/python:run-commands",
      "outputs": [
        "{workspaceRoot}/reports/packages/opentelemetry-instrumentation-bedrock/unittests",
        "{workspaceRoot}/coverage/packages/opentelemetry-instrumentation-bedrock"
      ],
      "options": {
        "command": "poetry run pytest tests/",
        "cwd": "packages/opentelemetry-instrumentation-bedrock"
      }
    },
    "replace-local-dependencies": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "chmod +x ../../scripts/replace-local-deps-versions.sh",
          "../../scripts/replace-local-deps-versions.sh"
        ],
        "cwd": "packages/opentelemetry-instrumentation-bedrock"
      }
    },
    "release": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "poetry publish --build",
        "cwd": "packages/opentelemetry-instrumentation-bedrock"
      },
      "dependsOn": ["^release", "replace-local-dependencies"]
    }
  },
  "tags": []
}

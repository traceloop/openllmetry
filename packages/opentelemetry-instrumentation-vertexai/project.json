{
  "name": "opentelemetry-instrumentation-vertexai",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/opentelemetry-instrumentation-vertexai/opentelemetry/instrumentation/vertexai",
  "targets": {
    "lock": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "uv lock",
        "cwd": "packages/opentelemetry-instrumentation-vertexai"
      }
    },
    "add": {
      "executor": "@nxlv/python:add",
      "options": {}
    },
    "update": {
      "executor": "@nxlv/python:update",
      "options": {}
    },
    "remove": {
      "executor": "@nxlv/python:remove",
      "options": {}
    },
    "build": {
      "executor": "@nxlv/python:build",
      "outputs": [
        "{projectRoot}/dist"
      ],
      "options": {
        "outputPath": "packages/opentelemetry-instrumentation-vertexai/dist",
        "publish": false,
        "lockedVersions": true,
        "bundleLocalDependencies": true
      }
    },
    "install": {
      "executor": "@nxlv/python:install",
      "options": {
        "silent": false,
        "args": "",
        "cacheDir": ".cache/uv",
        "verbose": false,
        "debug": false
      }
    },
    "lint": {
      "executor": "@nxlv/python:run-commands",
      "outputs": [
        "{workspaceRoot}/reports/packages/opentelemetry-instrumentation-vertexai/pylint.txt"
      ],
      "options": {
        "command": "uv sync --extra dev && uv run flake8 opentelemetry/ --output-file reports/packages/opentelemetry-instrumentation-vertexai/pylint.txt",
        "cwd": "packages/opentelemetry-instrumentation-vertexai"
      }
    },
    "test": {
      "executor": "@nxlv/python:run-commands",
      "outputs": [
        "{workspaceRoot}/reports/packages/opentelemetry-instrumentation-vertexai/unittests",
        "{workspaceRoot}/coverage/packages/opentelemetry-instrumentation-vertexai"
      ],
      "options": {
        "command": "uv sync --extra test && uv run pytest tests/",
        "cwd": "packages/opentelemetry-instrumentation-vertexai"
      }
    },
    "build-release": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "commands": [
          "chmod +x ../../scripts/build-release.sh",
          "../../scripts/build-release.sh"
        ],
        "cwd": "packages/opentelemetry-instrumentation-vertexai"
      }
    }
  },
  "tags": [
    "instrumentation"
  ]
}
{
  "name": "opentelemetry-instrumentation-azure-search",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/opentelemetry-instrumentation-azure-search/opentelemetry/instrumentation/azure_search",
  "targets": {
    "lock": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv lock",
        "cwd": "packages/opentelemetry-instrumentation-azure-search"
      }
    },
    "add": {
      "executor": "@nxlv/python:add",
      "options": {}
    },
    "update": {
      "executor": "@nxlv/python:update",
      "options": {}
    },
    "remove": {
      "executor": "@nxlv/python:remove",
      "options": {}
    },
    "build": {
      "executor": "@nxlv/python:build",
      "outputs": [
        "{projectRoot}/dist"
      ],
      "options": {
        "outputPath": "packages/opentelemetry-instrumentation-azure-search/dist",
        "publish": false,
        "lockedVersions": true,
        "bundleLocalDependencies": true
      }
    },
    "install": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv sync --all-groups",
        "cwd": "packages/opentelemetry-instrumentation-azure-search"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run ruff check .",
        "cwd": "packages/opentelemetry-instrumentation-azure-search"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": [
        "{workspaceRoot}/reports/packages/opentelemetry-instrumentation-azure-search/unittests",
        "{workspaceRoot}/coverage/packages/opentelemetry-instrumentation-azure-search"
      ],
      "options": {
        "command": "uv run pytest tests/",
        "cwd": "packages/opentelemetry-instrumentation-azure-search"
      }
    },
    "build-release": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "chmod +x ../../scripts/build-release.sh",
          "../../scripts/build-release.sh"
        ],
        "cwd": "packages/opentelemetry-instrumentation-azure-search"
      }
    }
  },
  "tags": [
    "instrumentation"
  ]
}

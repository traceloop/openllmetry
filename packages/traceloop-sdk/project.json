{
  "name": "traceloop-sdk",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/traceloop-sdk/traceloop_sdk",
  "targets": {
    "lock": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "uv lock",
        "cwd": "packages/traceloop-sdk"
      }
    },
    "add": {
      "executor": "@nxlv/python:add",
      "options": {}
    },
    "update": {
      "executor": "@nxlv/python:update",
      "options": {}
    },
    "remove": {
      "executor": "@nxlv/python:remove",
      "options": {}
    },
    "build": {
      "executor": "@nxlv/python:build",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "outputPath": "packages/traceloop-sdk/dist",
        "publish": false,
        "lockedVersions": true,
        "bundleLocalDependencies": true
      }
    },
    "install": {
      "executor": "@nxlv/python:install",
      "options": {
        "silent": false,
        "args": "",
        "cacheDir": ".cache/uv",
        "verbose": false,
        "debug": false
      }
    },
    "lint": {
      "executor": "@nxlv/python:run-commands",
      "outputs": ["{workspaceRoot}/reports/packages/traceloop-sdk/pylint.txt"],
      "options": {
        "command": "uv sync --extra dev && uv run flake8 traceloop/ --output-file reports/packages/traceloop-sdk/pylint.txt",
        "cwd": "packages/traceloop-sdk"
      }
    },
    "test": {
      "executor": "@nxlv/python:run-commands",
      "outputs": [
        "{workspaceRoot}/reports/packages/traceloop-sdk/unittests",
        "{workspaceRoot}/coverage/packages/traceloop-sdk"
      ],
      "options": {
        "command": "uv sync --extra test && uv run pytest tests/",
        "cwd": "packages/traceloop-sdk"
      }
    },
    "build-release": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "commands": [
          "chmod +x ../../scripts/build-release.sh",
          "../../scripts/build-release.sh"
        ],
        "cwd": "packages/traceloop-sdk"
      }
    }
  },
  "tags": ["sdk"]
}
